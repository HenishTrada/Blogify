<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Homepage</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
        <div class="row row-cols-3">
            <% blogs.forEach(blog => { %>
                <div class="col">
                    <div class="card" style="width: 18rem ; margin-top: 2rem;">
                        <img src="<%= blog.coverImage %>" class="card-img-top" alt="..." style="height: 12rem; object-fit:scale-down;">
                        <div class="card-body">
                          <h5 class="card-title"><%= blog.title %></h5>
                          <a href="/blog/<%=blog._id %>" class="btn btn-primary">View more</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include("./partials/scripts")%>
</body>
</html>