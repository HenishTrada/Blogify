<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blog</title>
</head>
<body>
    <%- include("./partials/nav") %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImage %>" style="width: 700px; object-fit: cover;">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImage %>" style="width: 50px;">
        <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-4">
        <h3>Add Comments</h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mt-3">
                    <input
                    type="text",
                    name="content",
                    placeholder="Enter your comment"
                    class="form-control"
                    >
                    <button class="btn btn-sm btn-primary mt-3" type="submit">Add</button>
                </div>
            </form>
        <% } %>
    </div>

    <div class=" container mt-3">
        <h3>Reviews  <% if (comments.length !== 0) { %>
            <%= `( ${comments.length} )` %>
           <% } else{ %>
            <%= `(0)` %>
       <%} %></h3>
        <% comments.reverse().forEach(comment => { %>
            <div>
                <img src="<%= comment.createdBy.profileImage %>" width="50px">
                <%= comment.createdBy.fullName %>
                <pre><%= comment.content %></pre>
            </div>
        <% }) %>
    </div>
    
    <%- include("./partials/scripts")%>
</body>
</html>